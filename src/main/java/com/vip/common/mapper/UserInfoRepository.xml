<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.vip.common.repository.UserInfoRepository" >
  <resultMap id="BaseResultMap" type="com.vip.common.entity.UserInfoModel">
    <result column="uid" property="userNo" jdbcType="VARCHAR" />
    <result column="realname" property="userName" jdbcType="VARCHAR" />
    <result column="identity_card" property="idCardNo" jdbcType="VARCHAR" />
    <result column="sex" property="sex" jdbcType="VARCHAR" />
  </resultMap>

 <sql id="Base_Column_List" >
   `uid`,
   `realname`,
   `identity_card`,
   `sex`
 </sql>
  
  <select id="getUserInfoModelByUserNo" resultMap="BaseResultMap">
  	select 
  	<include refid="Base_Column_List" />
  	from vipshop_xfd_users_approve_certid 
  	where is_deleted = 0 and uid = #{userNo}
  </select>

    <select id="getUserInfoModelByUserNoForTest" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from vipshop_xfd_users_approve_certid
        where is_deleted = 0 and uid = #{userNo} and sex = 0
    </select>
 </mapper>
  

  
	