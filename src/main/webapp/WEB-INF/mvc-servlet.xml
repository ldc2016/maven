<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd
       http://www.springframework.org/schema/aop
	   http://www.springframework.org/schema/aop/spring-aop-4.0.xsd
	   http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <context:component-scan base-package="com.ldc.common.**.controller" use-default-filters="false">
        <context:include-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
    </context:component-scan>

    <bean class="org.springframework.web.servlet.view.ContentNegotiatingViewResolver">
        <property name="viewResolvers">
            <list>
                <bean class="org.springframework.web.servlet.view.BeanNameViewResolver" />
                <!--use jsp view resolver-->
                <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
                    <property name="prefix" value="/WEB-INF/views/"/>
                    <property name="suffix" value=".jsp"/>
                    <property name="viewClass" value="org.springframework.web.servlet.view.JstlView" />
                </bean>
            </list>
        </property>
        <property name="defaultViews">
            <list>
                <bean class="org.springframework.web.servlet.view.json.MappingJackson2JsonView" />
            </list>
        </property>
    </bean>

    <!-- multipart Resolver -->
    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <!--property name="maxUploadSize" value="100000"/-->
    </bean>

    <!--基于AOP实现注解拦截-->
    <bean id="signInterceptorByAop"  class="com.ldc.springLearn.interceptor.SignCheckInterceptor1" />
    <aop:config>
        <aop:pointcut id="signInterceptorPointcut" expression="@annotation(com.ldc.springLearn.annotation.SignCheck)"/>
        <aop:advisor advice-ref="signInterceptorByAop" pointcut-ref="signInterceptorPointcut"/>
    </aop:config>

    <!--基于springMVC 拦截器实现拦截-->
    <!--<mvc:interceptors>-->
        <!--<ref bean="signInterceptor"/>-->
    <!--</mvc:interceptors>-->

    <!--<bean id="signInterceptor" class="com.ldc.springLearn.interceptor.SignCheckInterceptor2"/>-->
</beans>